<%- include("partials/header") %>

<div class="ui main text container">
    <div class="ui huge header">Spirited Stories Blog</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach((blog) => { %>
            <div class="item">
                <div class="ui medium rounded image">
                    <img src="<%= blog.image %>">
                </div>
                <div class="content">
                    <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
                    <div class="meta">
                        <span><%= blog.created.toDateString() %></span>
                    </div>
                    <div class="description">
                        <p><%- blog.body.substring(0, 100) %>...</p>
                        <!-- using the "<%-  %>" to actually render any (sanitized) HTML a user may submit -->
                    </div>
                    <div class="extra">
                        <a class="ui floated teal button" href="/blogs/<%= blog._id %>">
                            Read More <i class="right chevron icon"></i>
                        </a>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</div>

<%- include("partials/footer") %>